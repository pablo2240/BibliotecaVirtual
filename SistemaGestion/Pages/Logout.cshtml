@page
@model LogoutModel
@{
    ViewData["Title"] = "Cerrando Sesión";
}

<div class="min-vh-100 d-flex align-items-center gradient-bg">
    <div class="container text-center text-white">
        <i class="bi bi-box-arrow-right" style="font-size: 5rem;"></i>
        <h2 class="mt-3">Cerrando Sesión...</h2>
        <p>Gracias por usar EduPlatform</p>
        <div class="spinner-border text-light mt-3" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
</div>

<script>
    setTimeout(function() {
        window.location.href = '/';
    }, 2000);
</script>