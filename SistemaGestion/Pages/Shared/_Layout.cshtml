<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EduPlatform</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.15);
        }
        .sidebar {
            background: linear-gradient(180deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
        }
        .nav-link.active {
            background-color: rgba(255,255,255,0.2);
            border-radius: 8px;
        }
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .emoji-icon {
            font-size: 1.2em;
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            @if (Context.Session.GetString("Usuario") != null)
            {
                <!-- Sidebar -->
                <nav class="col-md-3 col-lg-2 d-md-block sidebar collapse">
                    <div class="position-sticky pt-3">
                        <div class="text-center text-white mb-4">
                            <h4><i class="bi bi-mortarboard"></i> EduPlatform</h4>
                            <small>Hola, @Context.Session.GetString("UsuarioNombre")</small>
                        </div>
                        
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Dashboard">
                                    <span class="emoji-icon">🏠</span>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Cursos">
                                    <span class="emoji-icon">📚</span>Ver Cursos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/MisCursos">
                                    <span class="emoji-icon">🎒</span>Mis Cursos
                                </a>
                            </li>
                            @if (Context.Session.GetString("UsuarioRole") == "admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/Admin">
                                        <span class="emoji-icon">⚙️</span>Administrar
                                    </a>
                                </li>
                            }
                            <li class="nav-item mt-4">
                                <a class="nav-link text-white" href="/Logout">
                                    <span class="emoji-icon">🚪</span>Cerrar Sesión
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
                
                <!-- Main content -->
                <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    @RenderBody()
                </main>
            }
            else
            {
                <!-- Full width for login -->
                <main class="col-12">
                    @RenderBody()
                </main>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>