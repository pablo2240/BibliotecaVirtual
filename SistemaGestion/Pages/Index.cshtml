@page
@model IndexModel
@{
    ViewData["Title"] = "Inicio";
}

@if (HttpContext.Session.GetString("Usuario") != null)
{
    // Si está logueado, redirigir a dashboard
    <script>
        window.location.href = '/Dashboard';
    </script>
}
else
{
    <!-- Login Page -->
    <div class="min-vh-100 d-flex align-items-center gradient-bg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg border-0">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <h2 class="text-primary fw-bold">
                                    <i class="bi bi-mortarboard"></i> EduPlatform
                                </h2>
                                <p class="text-muted">Iniciar Sesión</p>
                            </div>

                            @if (Model.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
                                </div>
                            }

                            <form method="post">
                                <div class="mb-3">
                                    <label class="form-label">
                                        <i class="bi bi-envelope"></i> Email
                                    </label>
                                    <input type="email" class="form-control form-control-lg"
                                           asp-for="LoginRequest.Email" placeholder="tu@email.com"
                                           value="admin@example.com" required>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">
                                        <i class="bi bi-lock"></i> Contraseña
                                    </label>
                                    <input type="password" class="form-control form-control-lg"
                                           asp-for="LoginRequest.Password" placeholder="Tu contraseña"
                                           value="password123" required>
                                </div>

                                <button type="submit" class="btn btn-primary btn-lg w-100 gradient-bg border-0">
                                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                                </button>
                            </form>

                            <div class="text-center mt-4">
                                <small class="text-muted">
                                    💡 Demo: admin@example.com / password123
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}